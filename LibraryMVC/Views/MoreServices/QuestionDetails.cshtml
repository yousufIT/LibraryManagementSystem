@using System.Globalization
@model QuestionDetailsResponse
@{
    ViewData["Title"] = "Question Details";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - LibraryMVC</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .question-details {
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
            min-width:80%
        }

        .owner-info img {
            border-radius: 50%;
        }

        .owner-info {
            margin-bottom: 20px;
        }

       
    </style>
</head>

<body>

    <div class="question-details">
        <h1>@Model.Title</h1>

        <div class="owner-info">
            <h2>Asked by: <a href="@Model.Owner.Link" target="_blank">@Model.Owner.DisplayName</a></h2>
            <p><strong>Reputation:</strong> @Model.Owner.Reputation</p>
            <p><strong>Accept Rate:</strong> @Model.Owner.AcceptRate%</p>
            <img src="@Model.Owner.ProfileImage" alt="@Model.Owner.DisplayName" width="100" height="100">
        </div>

        <p><strong>Score:</strong> @Model.Score</p>
        <p><strong>Views:</strong> @Model.ViewCount</p>
        <p><strong>Answers:</strong> @Model.AnswerCount</p>
        <p><strong>Created At:</strong> @DateTimeOffset.FromUnixTimeSeconds(Model.CreationDate).DateTime.ToString("F", CultureInfo.CurrentCulture)</p>
        <p><strong>Last Activity:</strong> @DateTimeOffset.FromUnixTimeSeconds(Model.LastActivityDate).DateTime.ToString("F", CultureInfo.CurrentCulture)</p>
        <p><strong>Tags:</strong> @string.Join(", ", Model.Tags)</p>

        <p><strong>Content License:</strong> @Model.ContentLicense</p>
        <p><a href="@Model.Link" target="_blank">View on Stack Overflow</a></p>
    </div>

</body>

</html>
